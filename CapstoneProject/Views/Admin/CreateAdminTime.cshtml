        $('#AdminDate').datetimepicker({
            format: "MM/DD/YYYY",
            //startDate: firstdate,
            //endDate: lastDate
            });
        }).on('dp.change', function (e) {
            $(this).data('DateTimePicker').hide();
        });
    });
</script>



